<h3>Hi ðŸ‘‹, ðŸ¤–...what can I like for you</h3>
<form id="form" class="" action="/like" method="post">
  <div class="form-group">
    <label for="">Instagram user:</label>
    <input class="form-control" type="text" name="usr" required>
  </div>
  <div class="form-group">
    <label for="">Instagram password:</label>
    <input class="form-control" type="password" name="pwd" required>
  </div>
  <div class="form-group">
    <label for="">Instagram hashtag (without '#'):</label>
    <input class="form-control" type="text" name="hash"  required>
  </div>
  <input id="Submit" type="submit" value="Like"  class="btn btn-primary">
  <div id="results">
  </div>
</form>

<script>

const form = document.getElementById('form');
form.addEventListener('submit', (e) => {
  e.preventDefault()
  const formData = new FormData(form);
  const obj = {}
  for (var [key, value] of formData.entries()) { 
    obj[key] = value
  }
  var req = new XMLHttpRequest();
  req.open('POST', '/like');
  req.setRequestHeader('Content-Type', 'application/json');
  req.onreadystatechange = function() {
    if (req.readyState == XMLHttpRequest.DONE) {
      document.getElementById('results').innerHTML = `<a href="/results/${req.responseText}">Your results will be shonw here ðŸ¤–</a>`
    }
  }
  req.send(JSON.stringify(obj));
})
</script>